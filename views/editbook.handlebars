<h1>Atualizar seu livro</h1>
<form action=" /books/updatebook" method="post" class="form">
    <input type="hidden" name="id" value="{{book.id}}">
    <section class="form-control">
        <label for="title">Título</label>
        <input type="text" name="title" value="{{book.title}}">
    </section>

    <section class="form-control">
        <label for="nm_paginas">Quantidade de páginas</label>
        <input type="text" name="nm_paginas" value="{{book.nm_paginas}}">
    </section>

    <section class="form-control">
        <input type="submit" value="Atualizar">
    </section>
</form>